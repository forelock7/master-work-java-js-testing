{
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "dist",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],
      "@config/*": ["src/config/*"],
      "@constants/*": ["src/constants/*"],
      "@fixtures/*": ["src/fixtures/*"],
      "@pages/*": ["src/pages/*"],
      "@steps/*": ["src/steps/*"],
      "@utils/*": ["src/utils/*"]
    },
    "lib": ["dom"]
  }
}
